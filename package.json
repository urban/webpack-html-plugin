{
  "name": "@urban/webpack-html-plugin",
  "version": "1.0.1",
  "description": "Webpack plugin that renders HTML files.",
  "author": "Urban Faubion",
  "license": "MIT",
  "keywords": [
    "generate",
    "html",
    "plugin",
    "webpack"
  ],
  "homepage": "https://github.com/urban/webpack-html-plugin#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/urban/webpack-html-plugin.git"
  },
  "bugs": {
    "url": "https://github.com/urban/webpack-html-plugin/issues"
  },
  "main": "lib/index.js",
  "jsnext:main": "src/index.js",
  "scripts": {
    "build:lib": "NODE_ENV=production babel src --out-dir lib",
    "build:watch": "babel src --out-dir lib --watch",
    "build": "rimraf lib && npm run build:lib",
    "check": "npm run test:lint && npm test && npm run test:audit && npm outdated --depth 0",
    "prepublish": "npm run build",
    "test:audit": "nsp check",
    "test:coverage": "rimraf coverage && babel-node $(npm bin)/isparta cover ./test/*-test.js",
    "test:lint": "standard",
    "test:typecheck": "flow check ./src",
    "test:watch": "chokidar src/*.js -c 'npm test'",
    "test": "babel-node ./test/*-test.js | tap-spec",
    "preversion": "npm run check",
    "version": "npm run build",
    "postversion": "git push && git push --tags"
  },
  "devDependencies": {
    "@urban/promisify": "^1.0.3",
    "babel-cli": "^6.3.15",
    "babel-core": "6.3.15",
    "babel-eslint": "^4.1.6",
    "babel-loader": "6.2.0",
    "babel-plugin-transform-flow-strip-types": "6.3.15",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-stage-0": "6.3.13",
    "chokidar-cli": "^1.1.0",
    "css-loader": "0.23.0",
    "extract-text-webpack-plugin": "0.9.1",
    "isparta": "^4.0.0",
    "nsp": "^2.1.0",
    "rimraf": "^2.4.4",
    "standard": "^5.4.1",
    "style-loader": "0.13.0",
    "tap-spec": "^4.1.1",
    "tape": "^4.2.2",
    "webpack": "1.12.9"
  },
  "standard": {
    "parser": "babel-eslint"
  }
}

{
  "name": "@urban/webpack-html-plugin",
  "version": "0.3.0",
  "description": "Webpack plugin that renders HTML files.",
  "author": "Urban Faubion",
  "license": "MIT",
  "keywords": [
    "generate",
    "html",
    "plugin",
    "webpack"
  ],
  "homepage": "https://github.com/urban/webpack-html-plugin#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/urban/webpack-html-plugin.git"
  },
  "bugs": {
    "url": "https://github.com/urban/webpack-html-plugin/issues"
  },
  "main": "lib/index.js",
  "scripts": {
    "build": "npm run clean && npm run build:lib",
    "build:lib": "NODE_ENV=production babel src --out-dir lib",
    "clean": "rimraf lib",
    "lint": "standard",
    "prepublish": "npm run build",
    "test": "npm run test:tape && npm run lint",
    "test:tape": "babel-node ./test/index.js | tap-bail | tap-spec",
    "watch": "babel src --out-dir lib --watch"
  },
  "devDependencies": {
    "babel": "^5.8.23",
    "babel-eslint": "^4.1.3",
    "rimraf": "^2.4.3",
    "standard": "^5.3.1",
    "tap-spec": "^4.1.0",
    "tape": "^4.2.1"
  },
  "standard": {
    "parser": "babel-eslint"
  }
}

{
  "name": "@urban/webpack-html-plugin",
  "version": "0.3.1",
  "description": "Webpack plugin that renders HTML files.",
  "author": "Urban Faubion",
  "license": "MIT",
  "keywords": [
    "generate",
    "html",
    "plugin",
    "webpack"
  ],
  "homepage": "https://github.com/urban/webpack-html-plugin#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/urban/webpack-html-plugin.git"
  },
  "bugs": {
    "url": "https://github.com/urban/webpack-html-plugin/issues"
  },
  "main": "lib/index.js",
  "jsnext:main": "src/index.js",
  "scripts": {
    "build:lib": "NODE_ENV=production babel src --out-dir lib",
    "build:watch": "babel src --out-dir lib --watch",
    "build": "rimraf lib && npm run build:lib",
    "check": "npm run test:lint && npm test && npm run test:audit && npm outdated --depth 0",
    "prepublish": "npm run build",
    "test:audit": "nsp audit-package",
    "test:cov": "rimraf coverage && babel-node $(npm bin)/isparta cover --config=.istanbul.json ./src/__tests__",
    "test:lint": "standard",
    "test:typecheck": "flow check ./src",
    "test:watch": "chokidar src/*.js -c 'npm test'",
    "test": "babel-node ./src/__tests__/*.js | tap-spec",
    "preversion": "npm run check",
    "version": "npm run build",
    "postversion": "git push && git push --tags"
  },
  "devDependencies": {
    "@urban/promisify": "^1.0.3",
    "babel": "^5.8.23",
    "babel-eslint": "^4.1.3",
    "babel-loader": "^5.3.2",
    "babel-plugin-flow-comments": "^1.0.9",
    "chokidar-cli": "^1.1.0",
    "css-loader": "^0.19.0",
    "extract-text-webpack-plugin": "^0.8.2",
    "isparta": "3.1.0",
    "nsp": "^1.1.0",
    "rimraf": "^2.4.3",
    "standard": "^5.3.1",
    "style-loader": "^0.12.4",
    "tap-spec": "^4.1.0",
    "tape": "^4.2.1",
    "webpack": "^1.12.2"
  },
  "standard": {
    "parser": "babel-eslint"
  }
}
